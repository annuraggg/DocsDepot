{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "strict": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "types": ["node"],
    "typeRoots": [
      "./node_modules/@types",
      "../node_modules/@types",
      "../../node_modules/@types"
    ],
    "jsx": "react-jsx",
    "moduleDetection": "force" /* Linting */,
    "isolatedModules": true,
    "baseUrl": ".",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    "jsxImportSource": "hono/jsx",
    "paths": {
      "@shared-types/*": ["../common/types/*"]
    }
  },
  "include": ["../common/types/*"]
}
